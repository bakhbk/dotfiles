# Clean any flutter project
fclean() {
  # Find all directories containing a pubspec.yaml file
  find . -name "pubspec.yaml" -exec dirname {} \; | while read -r dir; do
    # Construct the path to the build directory
    build_dir="$dir/build"

    # Check if the build directory exists
    if [ -d "$build_dir" ]; then
      echo "Removing build directory in $dir"
      rm -rf "$build_dir"
    fi
  done
}

# Clean node_modules on react project
rclean () {
  # Find all directories containing a package.json file
  find . -name "package.json" -exec dirname {} \; | while read -r dir; do
    # Construct the path to the node_modules directory
    node_modules_dir="$dir/node_modules"

    # Check if the node_modules directory exists
    if [ -d "$node_modules_dir" ]; then
      echo "Removing node_modules directory in $dir"
      rm -rf "$node_modules_dir"
    fi
  done
}

# Clean temporary files in various project types
clean_temp() {
  # Safety check
  if [[ "$PWD" == "/" ]]; then
    echo "ERROR: Cannot run clean_temp from root directory"
    return 1
  fi

  echo "=== Starting cleanup in $PWD ==="

  # Stash any uncommitted changes in git repos to preserve work
  echo "=== Stashing git changes ==="
  find . -name ".git" -type d | while read -r gitdir; do
    dir=$(dirname "$gitdir")
    (cd "$dir" && git diff-index --quiet HEAD || (git add . && git stash))
  done

  # Dart/Flutter projects
  echo "=== Cleaning Dart/Flutter projects ==="
  find . -name "pubspec.yaml" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning: $dir"
    cd "$dir"
    rm -rf .dart_tool build ios/build ios/Pods ios/Podfile.lock ios/.symlinks android/build android/.gradle
    if command -v flutter &> /dev/null; then
      flutter clean
    elif command -v dart &> /dev/null; then
      dart clean
    fi
    cd - > /dev/null
  done

  # Node.js/React projects
  echo "=== Cleaning Node.js/React projects ==="
  find . -name "package.json" -exec dirname {} \; | while read -r dir; do
    if [ -d "$dir/node_modules" ]; then
      echo "Removing: $dir/node_modules"
      rm -rf "$dir/node_modules"
    fi
    # Additional web temp dirs
    rm -rf "$dir/__sapper__" "$dir/.next" "$dir/.nuxt" "$dir/logs"
  done

  # PHP projects
  echo "=== Cleaning PHP projects ==="
  find . -name "composer.json" -exec dirname {} \; | while read -r dir; do
    if [ -d "$dir/vendor" ]; then
      echo "Removing: $dir/vendor"
      rm -rf "$dir/vendor"
    fi
    # Symfony/Laravel cache and logs (dynamic search)
    find "$dir" -type d \( -path "*/var/cache" -o -path "*/var/log" \) 2>/dev/null | while read -r cachedir; do
      echo "Removing: $cachedir"
      rm -rf "$cachedir"
    done
  done

  # Go projects
  echo "=== Cleaning Go projects ==="
  find . -name "go.mod" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning: $dir"
    (cd "$dir" && go clean -cache -modcache ./...)
  done

  # Go module cache (global)
  if [ -d "pkg/mod" ]; then
    echo "Removing Go module cache"
    rm -rf pkg/mod
  fi

  # Rust projects
  find . -name "Cargo.toml" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning Rust project in $dir"
    (cd "$dir" && cargo clean)
  done

  # Gradle/Java/Android projects
  find . -name "build.gradle" -o -name "build.gradle.kts" -exec dirname {} \; | while read -r dir; do
    if [ -d "$dir/build" ]; then
      echo "Removing build in $dir"
      rm -rf "$dir/build"
    fi
    # Additional Gradle temp dirs
    rm -rf "$dir/.gradle" "$dir/.idea" "$dir/.kotlin"
  done

  # Maven/Java projects
  find . -name "pom.xml" -exec dirname {} \; | while read -r dir; do
    if [ -d "$dir/target" ]; then
      echo "Removing target in $dir"
      rm -rf "$dir/target"
    fi
  done

  # Python projects
  find . -name "pyproject.toml" -o -name "setup.py" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning Python project in $dir"
    rm -rf "$dir/__pycache__" "$dir/dist" "$dir/build"
  done

  # .NET projects
  find . -name "*.csproj" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning .NET project in $dir"
    rm -rf "$dir/bin" "$dir/obj"
  done

  # Ruby projects
  find . -name "Gemfile" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning Ruby project in $dir"
    rm -rf "$dir/vendor/bundle" "$dir/.bundle"
  done

  # Elixir projects
  find . -name "mix.exs" -exec dirname {} \; | while read -r dir; do
    echo "Cleaning Elixir project in $dir"
    (cd "$dir" && mix clean)
  done

  # Cleanup Xcode artifacts
  find . -type d \( -name "DerivedData" -o -name "*.xcarchive" \) -exec rm -rf {} + 2>/dev/null

  # Cleanup general cache and temp files
  find . -type f -name ".DS_Store" -delete 2>/dev/null

  # Reset git repos to clean state
  echo "=== Resetting git repos ==="
  find . -name ".git" -type d | while read -r gitdir; do
    dir=$(dirname "$gitdir")
    (cd "$dir" && git diff-index --quiet HEAD || git reset --hard)
  done

  echo "=== Cleanup complete ==="
}

# ==========================
# = Show all aliases start =  
# ==========================
_aliases="$(alias -Lr 2>/dev/null || alias)"

alias_for() {
  local alias_name="$1"
  [[ -z "$alias_name" ]] && return 1

  local found="$(echo "$_aliases" | sed -nE "/^alias\ ${alias_name}='?(.+)/s//\\1/p" )"
  [[ -n "$found" ]] && echo "${found%\'}" || echo "Alias not found: $alias_name"
}


# Evaluate all the aliases
# example
# ```
# shas | grep -E "^alias g"
# ```
shas(){
  alias -Lr 2>/dev/null || alias
  # Убираем ANSI escape-последовательности из вывода функций
  functions | grep '^[a-zA-Z0-9_]\+ ()' | cut -d' ' -f1 | sed $'s/\e\[[0-9;]*[a-zA-Z]//g'
}

alias dfvv="shas | fzf"

function dfv() {
    if [ -z "$1" ]; then
        echo "Usage: dfv <pattern>"
        return 1
    fi
    local LIST
    LIST="$(shas  2>/dev/null || echo "")
        $(wtfis "$1" 2>/dev/null || echo "")"
    echo "$LIST" | grep -E "$1"
}

_showFlutterAliases () {
    shas "alias ([d|f]|dart|flutter)"
}

alias fli="_showFlutterAliases"
